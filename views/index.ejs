<%- include('partials/header') %>
<link rel="stylesheet" href="/stylesheets/main.css">
<title>Text Extractor</title>

</head>

<body>

    <div class="container">
        <div class="jumbotron text-center">
            <h2 class="mb-5 mt-5">Please upload your image to extract the text from it</h2>
            <form action="/" method="POST" enctype="multipart/form-data">
                <div class="custom-file">
                    <input name="image" type="file" class="custom-file-input" id="imageFile">
                    <label class="custom-file-label" for="imageFile">Choose image</label>
                </div>
                <button type="submit" class="btn btn-dark btn-lg mt-4">EXTRACT TEXT</button>
            </form>
        </div>
    </div>
    <%- include('partials/footer') %>
    <script src="javascripts/main.js"></script>